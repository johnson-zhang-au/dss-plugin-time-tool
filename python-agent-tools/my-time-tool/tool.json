/* This file is the descriptor for custom agent tool my-time-tool */
{
    "id": "time-tool",
    "meta": {
        "label": "Time Operations Tool",

        "description": "A tool for getting current time in specific timezones and converting times between different timezones. Supports IANA timezone names and provides detailed time information including DST status.",

        "icon": "fas fa-clock"
    },

    "params": [
        {
            "name": "logging_level",
            "label": "logging level",
            "type": "SELECT",
            "description": "The level of logging that the tool generates",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "DEBUG",
                    "label": "DEBUG"
                },
                {
                    "value": "INFO",
                    "label": "INFO"
                },
                {
                    "value": "WARNING",
                    "label": "WARNING"
                },
                {
                    "value": "ERROR",
                    "label": "ERROR"
                },
                {
                    "value": "CRITICAL",
                    "label": "CRITICAL"
                }
            ],
            "defaultValue": "INFO"
        }
    ]
}
